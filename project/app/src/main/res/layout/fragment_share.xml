<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uiReference.organizers.shareFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/shareEventInfoQRCode"
                android:layout_width="176dp"
                android:layout_height="146dp"
                android:layout_marginStart="126dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="127dp"
                android:layout_marginBottom="17dp"
                app:layout_constraintBottom_toTopOf="@+id/eventDetailsQRShareButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shareEventInfoText"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/shareEventInfoText"
                android:layout_width="209dp"
                android:layout_height="33dp"
                android:layout_marginStart="101dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="101dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/inter_bold"
                android:text="Share QR Code"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/shareEventInfoQRCode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkInQRShareButton" />

            <Button
                android:id="@+id/checkInQRShareButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="163dp"
                android:layout_marginBottom="36dp"
                android:text="Share"
                app:layout_constraintBottom_toTopOf="@+id/shareEventInfoText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkInQRCode" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="217dp"
                android:layout_height="39dp"
                android:layout_marginStart="97dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="97dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/inter_bold"
                android:text="Check-In QR Code"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/checkInQRCode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/checkInQRCode"
                android:layout_width="172dp"
                android:layout_height="138dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="128dp"
                android:layout_marginBottom="11dp"
                app:layout_constraintBottom_toTopOf="@+id/checkInQRShareButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <Button
                android:id="@+id/eventDetailsQRShareButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="161dp"
                android:layout_marginEnd="162dp"
                android:text="share"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>